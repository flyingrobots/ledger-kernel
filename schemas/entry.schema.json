{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://flyingrobots.dev/ledger-kernel/schemas/entry.schema.json",
  "title": "Ledger Entry",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "pattern": "^[a-f0-9]{64}$", "description": "BLAKE3-256 hex of canonical preimage (entry without attestations)" },
    "parent": { "type": ["string","null"], "pattern": "^[a-f0-9]{64}$" },
    "timestamp": { "type": "string", "format": "date-time" },
    "author": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" }
      },
      "required": ["id"]
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "data": {}
      },
      "required": ["type","data"]
    },
    "attestations": {
      "type": "array",
      "items": { "$ref": "https://flyingrobots.dev/ledger-kernel/schemas/attestation.schema.json" }
    }
  },
  "required": ["id","timestamp","author","payload","attestations"]
}

